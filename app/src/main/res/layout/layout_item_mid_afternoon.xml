<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTimeNoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/arial"
            android:text="9:30 AM"
            android:textColor="@color/colorDark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvApkNoon"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/design_button"
            android:gravity="center"
            android:text="APK"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toStartOf="@+id/tvModernNoon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeNoon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvModernNoon"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/design_button"
            android:gravity="center"
            android:text="MODERN"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/tvApkNoon"
            app:layout_constraintEnd_toStartOf="@+id/tvInternetNoon"
            app:layout_constraintStart_toEndOf="@+id/tvApkNoon"
            app:layout_constraintTop_toTopOf="@+id/tvApkNoon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInternetNoon"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/design_button"
            android:gravity="center"
            android:text="INTERNET"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/tvApkNoon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvModernNoon"
            app:layout_constraintTop_toTopOf="@+id/tvModernNoon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvApkValueNoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="11"
            android:textColor="@color/colorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tvApkNoon"
            app:layout_constraintStart_toStartOf="@id/tvApkNoon"
            app:layout_constraintTop_toBottomOf="@id/tvApkNoon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvModernValueNoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="22"
            android:textColor="@color/colorDark"
            app:layout_constraintEnd_toEndOf="@id/tvModernNoon"
            app:layout_constraintStart_toStartOf="@id/tvModernNoon"
            app:layout_constraintTop_toBottomOf="@id/tvModernNoon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInternetValueNoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="33"
            android:textColor="@color/colorDark"
            app:layout_constraintEnd_toEndOf="@id/tvInternetNoon"
            app:layout_constraintStart_toStartOf="@id/tvInternetNoon"
            app:layout_constraintTop_toBottomOf="@id/tvInternetNoon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>